<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_close" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:srcCompat="@drawable/sparkling_newsreader" />

    <TextView
        android:id="@+id/optin_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:paddingHorizontal="30dp"
        android:text="@string/brave_news_optin_title"
        android:textAlignment="center"
        android:textColor="@color/news_text_color"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/optin_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:paddingHorizontal="30dp"
        android:text="@string/brave_news_optin_subtitle"
        android:textAlignment="center"
        android:textColor="@color/news_text_color"
        android:textSize="15sp" />

    <Button
        android:id="@+id/optin_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:textStyle="normal"
        android:textSize="14sp"
        android:layout_marginHorizontal="60dp"
        android:background="@drawable/news_button_bg"
        android:text="@string/brave_news_optin_button" />

    <TextView
        android:id="@+id/optin_learnmore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:paddingHorizontal="30dp"
        android:text="@string/brave_news_optin_learn_more"
        android:textAlignment="center"
        android:textColor="@color/news_text_color"
        android:textSize="16sp"
        android:textStyle="bold" />
</LinearLayout>
